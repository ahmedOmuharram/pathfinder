{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pathfinder.veupathdb.org/schemas/veupathdb_models.json",
  "title": "VEuPathDB Models",
  "description": "JSON Schema for VEuPathDB API response models",
  "$defs": {
    "WdkStep": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "displayName": { "type": "string" },
        "shortDisplayName": { "type": "string" },
        "customName": { "type": "string" },
        "baseCustomName": { "type": "string" },
        "isFiltered": { "type": "boolean" },
        "recordClassName": { "type": "string" },
        "searchName": { "type": "string" },
        "searchConfig": {
          "$ref": "#/$defs/SearchConfig"
        },
        "estimatedSize": { "type": "integer" },
        "hasCompleteStepAnalyses": { "type": "boolean" },
        "expanded": { "type": "boolean" },
        "expandedName": { "type": "string" }
      },
      "required": ["id", "recordClassName"]
    },
    "SearchConfig": {
      "type": "object",
      "properties": {
        "parameters": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "wdkWeight": { "type": "integer" }
      }
    },
    "WdkStrategy": {
      "type": "object",
      "properties": {
        "strategyId": { "type": "integer" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "rootStepId": { "type": "integer" },
        "steps": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/WdkStep"
          }
        },
        "stepTree": {
          "$ref": "#/$defs/StepTree"
        },
        "recordClassName": { "type": "string" },
        "signature": { "type": "string" },
        "estimatedSize": { "type": "integer" },
        "createdTime": { "type": "string", "format": "date-time" },
        "lastModified": { "type": "string", "format": "date-time" },
        "releaseVersion": { "type": "string" },
        "isPublic": { "type": "boolean" },
        "isSaved": { "type": "boolean" },
        "isValid": { "type": "boolean" },
        "isDeleted": { "type": "boolean" }
      },
      "required": ["strategyId", "rootStepId", "stepTree", "recordClassName"]
    },
    "StepTree": {
      "type": "object",
      "properties": {
        "stepId": { "type": "integer" },
        "primaryInput": {
          "$ref": "#/$defs/StepTree"
        },
        "secondaryInput": {
          "$ref": "#/$defs/StepTree"
        }
      },
      "required": ["stepId"]
    },
    "RecordType": {
      "type": "object",
      "properties": {
        "urlSegment": { "type": "string" },
        "displayName": { "type": "string" },
        "displayNamePlural": { "type": "string" },
        "shortDisplayName": { "type": "string" },
        "shortDisplayNamePlural": { "type": "string" },
        "description": { "type": "string" },
        "iconName": { "type": "string" },
        "hasAllRecordsQuery": { "type": "boolean" },
        "searches": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/SearchSummary"
          }
        }
      },
      "required": ["urlSegment", "displayName"]
    },
    "SearchSummary": {
      "type": "object",
      "properties": {
        "urlSegment": { "type": "string" },
        "displayName": { "type": "string" },
        "shortDisplayName": { "type": "string" },
        "description": { "type": "string" },
        "isInternal": { "type": "boolean" }
      },
      "required": ["urlSegment", "displayName"]
    },
    "SearchDetails": {
      "type": "object",
      "properties": {
        "urlSegment": { "type": "string" },
        "displayName": { "type": "string" },
        "description": { "type": "string" },
        "summary": { "type": "string" },
        "paramNames": {
          "type": "array",
          "items": { "type": "string" }
        },
        "parameters": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/SearchParameter"
          }
        },
        "groups": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/ParameterGroup"
          }
        }
      },
      "required": ["urlSegment", "displayName", "paramNames", "parameters"]
    },
    "SearchParameter": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "displayName": { "type": "string" },
        "help": { "type": "string" },
        "type": {
          "type": "string",
          "enum": ["StringParam", "NumberParam", "EnumParam", "FlatVocabParam", "DateParam", "DateRangeParam", "NumberRangeParam", "FilterParam", "DatasetParam", "AnswerParam"]
        },
        "isVisible": { "type": "boolean" },
        "isReadOnly": { "type": "boolean" },
        "initialDisplayValue": { "type": "string" },
        "dependentParams": {
          "type": "array",
          "items": { "type": "string" }
        },
        "allowEmptyValue": { "type": "boolean" },
        "vocabulary": {
          "type": "array",
          "items": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "minSelectedCount": { "type": "integer" },
        "maxSelectedCount": { "type": "integer" }
      },
      "required": ["name", "displayName", "type"]
    },
    "ParameterGroup": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "displayName": { "type": "string" },
        "description": { "type": "string" },
        "isVisible": { "type": "boolean" },
        "parameters": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["name", "parameters"]
    },
    "TemporaryResult": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "status": {
          "type": "string",
          "enum": ["pending", "running", "complete", "expired", "error"]
        },
        "downloadUrl": { "type": "string", "format": "uri" },
        "expiresAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "status"]
    }
  }
}

