{
  "name": "@pathfinder/shared",
  "version": "1.0.0",
  "description": "Shared TypeScript types for Pathfinder",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "generate:openapi": "node scripts/generate-openapi.mjs",
    "check:openapi": "node scripts/generate-openapi.mjs --check",
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "openapi-typescript": "^7.10.1",
    "typescript": "^5.5.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    },
    "./zod": {
      "import": "./dist/zod.js",
      "types": "./dist/zod.d.ts"
    }
  }
}
